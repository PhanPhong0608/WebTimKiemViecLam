@model IEnumerable<DACS_WebTimKiemViecLam.Models.Field>

@{
    ViewData["Title"] = "Danh sách lĩnh vực";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Thêm lĩnh vực</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên lĩnh vực</th>
            <th>Mô tả</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var field in Model)
        {
            <tr>
                <td>@field.FieldName</td>
                <td>@field.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@field.FieldID" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@field.FieldID" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>