@model IEnumerable<DACS_WebTimKiemViecLam.Models.JobApplication>

@{
    ViewData["Title"] = "Danh sách đơn ứng tuyển";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-primary">+ Tạo đơn mới</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Người ứng tuyển</th>
            <th>Vị trí</th>
            <th>Ngày nộp</th>
            <th>Trạng thái</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.User?.FullName</td>
                <td>@app.JobPosition?.Title</td>
                <td>@app.ApplicationDate.ToShortDateString()</td>
                <td>@app.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@app.ApplicationID" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@app.ApplicationID" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
