@model IEnumerable<JobApplication>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Người ứng tuyển</th>
            <th>Vị trí</th>
            <th>Công ty</th>
            <th>Ngày nộp</th>
            <th>Trạng thái</th>
            <th>CV</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var app in Model)
        {
            <tr>
                <td>@app.User?.FullName</td>
                <td>@app.JobPosition?.Title</td>
                <td>@app.JobPosition?.Company?.Name</td>
                <td>@app.ApplicationDate.ToShortDateString()</td>
                <td>@app.Status</td>
                <td>
                    @if (!string.IsNullOrEmpty(app.CVFilePath))
                    {
                        <a href="@app.CVFilePath" target="_blank">Tải CV</a>
                    }
                    else
                    {
                        <span class="text-muted">Chưa có CV</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@app.ApplicationID" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@app.ApplicationID" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>