@model DACS_WebTimKiemViecLam.Models.JobApplication

@{
    ViewData["Title"] = "Cập nhật đơn ứng tuyển";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="ApplicationID" value="@Model.ApplicationID" />

    <div class="form-group">
        <label>Người ứng tuyển</label>
        <input type="text" class="form-control" value="@Model.User?.FullName" readonly />
    </div>

    <div class="form-group">
        <label>Vị trí tuyển dụng</label>
        <input type="text" class="form-control" value="@Model.JobPosition?.Title" readonly />
    </div>

    <div class="form-group">
        <label>Đường dẫn CV</label>
        <input type="text" class="form-control" value="@Model.CVFilePath" readonly />

        @* Hiển thị nút xem CV phía dưới *@
        @if (!string.IsNullOrEmpty(Model.CVFilePath))
        {
            <div class="mt-2">
                <a href="@Url.Content(Model.CVFilePath)" target="_blank" class="btn btn-outline-primary">Xem CV</a>
            </div>
        }
        else
        {
            <p class="text-muted mt-2">Không có CV</p>
        }
    </div>

    <div class="form-group">
        <label>Trạng thái</label><br />
        <button type="submit" name="Status" value="Pending" class="btn btn-warning">Pending</button>
        <button type="submit" name="Status" value="Accepted" class="btn btn-success">Accepted</button>
        <button type="submit" name="Status" value="Rejected" class="btn btn-danger">Rejected</button>
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
