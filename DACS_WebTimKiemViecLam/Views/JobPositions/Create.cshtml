@model DACS_WebTimKiemViecLam.Models.JobPosition

@{
    ViewData["Title"] = "Đăng việc làm";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Requirements"></label>
        <textarea asp-for="Requirements" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PostedDate"></label>
        <input asp-for="PostedDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="ExpiryDate"></label>
        <input asp-for="ExpiryDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Công ty</label>
        <select asp-for="CompanyID" class="form-control" asp-items="ViewBag.CompanyList">
            <option value="">-- Chọn công ty --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Lĩnh vực</label>
        <select asp-for="FieldID" class="form-control" asp-items="ViewBag.FieldList">
            <option value="">-- Chọn lĩnh vực --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Đăng</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
